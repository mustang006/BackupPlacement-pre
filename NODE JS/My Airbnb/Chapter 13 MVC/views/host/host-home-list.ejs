<%- include('../partials/head') %>
</head>
<body>
  <%- include('../partials/nav') %>
  <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-6xl">
    <h2 class="text-3xl text-red-500 font-bold text-center mb-6">
      Hey host! Here are your registered homes:
    </h2>
    <div class="flex flex-wrap justify-center gap-6">
      <% registeredHomes.forEach(home => { %>
        <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition duration-300 w-full max-w-sm">
          <!-- Image Section -->
          <img 
            src="https://cdn.pixabay.com/photo/2024/09/15/21/50/house-plans-9050076_640.png" 
            alt="<%= home.houseName %>" 
            class="w-full h-48 object-cover"
          />

          <!-- Content Section -->
          <div class="p-4">
            <!-- House Name -->
            <h3 class="text-xl font-semibold text-gray-800 mb-2">
              <%= home.houseName %>
            </h3>

            <!-- Location -->
            <p class="text-gray-600 mb-2 flex items-center">
              <i class="fas fa-map-marker-alt mr-2"></i>
              <%= home.location %>
            </p>

            <!-- Price and Rating -->
            <div class="flex justify-between items-center mb-4">
              <span class="text-lg font-bold text-red-500">
                Rs <%= home.price %> / night
              </span>
              <div class="flex items-center">
                <!-- Star Icon -->
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 text-yellow-400 mr-1">
                  <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
                </svg>
                <span class="text-gray-700"><%= home.rating %></span>
              </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex justify-between px-4">
              <button 
                class="bg-blue-500 hover:bg-blue-700 text-white font-medium text-sm py-1.5 px-3 rounded-md transition duration-300 flex items-center"
              >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"/>
                </svg>
                Edit
              </button>
              <button 
                class="bg-red-500 hover:bg-red-700 text-white font-medium text-sm py-1.5 px-3 rounded-md transition duration-300 flex items-center"
              >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"/>
                </svg>
                Delete
              </button>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </main>
</body>
</html>
